<h1>New Answer</h1>
<% if flash[:alert] %>
    <div class="notice"><%= flash[:alert] %></div>
<% end %>
<%= form_for @answer do |m| %>
<% if !@answer.errors.empty? %>
	<%= @answer.errors.full_messages %>
  	<% end %>
	<%= m.label :content, "Content" %>
	<%= m.text_field :content %>
	<br>
  <br>
	<%= m.submit "New Answer" %>
<% end %>