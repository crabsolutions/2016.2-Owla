<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :email %>
      <br><%= f.email_field :email, class: 'form-control' %>
      <br><br><%= f.label :senha %></br>
      <%= f.password_field :password, class: 'form-control' %>
      <!--<p>New user? <%= link_to "Sign up now!", :back %></p>-->
      <br><br><%= f.submit "Entrar", class: "btn btn-primary" %>
    <% end %>

      </div>
</div>
